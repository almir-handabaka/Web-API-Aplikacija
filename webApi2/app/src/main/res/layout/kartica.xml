<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:id="@+id/karticaKripto"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="12dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/web_api" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nazivValute"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#AA0A0A"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Naziv valute"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/simbolValute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="#AA0A0A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="simbol"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/rankValute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="#AA0A0A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="1"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/cijenaValute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="#AA0A0A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="$22,035.89"
                    tools:visibility="visible" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>


